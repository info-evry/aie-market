generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  stripeCustomerId String?
  role             Role      @default(USER)
}

model Product {
  id                    String    @id @default(cuid())
  title                 String
  description           String?
  priceMember           String
  priceExternal         String
  customField           String?
  quantity              Int?
  category              String?
  isExclusiveToStudents Boolean?
  isExternal            Boolean?
  isActive              Boolean   @default(true)
  createdAt             DateTime  @default(now())
  deletedAt             DateTime?
}

enum Role {
  USER
  MEMBER
  ADMIN
}
